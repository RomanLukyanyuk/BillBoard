@model BillBoard.Models.LoginModel

@{
    ViewBag.Title = "Выполнить вход";
}

<section id="loginForm">
    @using (Html.BeginForm(new { ReturnUrl = ViewBag.ReturnUrl }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)

        <div class="container">

            <div class="row" style="margin-top:20px">
                <div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">
                    <form role="form">
                        <fieldset>
                            <h2>@ViewBag.Title</h2>
                            <hr class="colorgraph">
                            <div class="form-group">
                                @Html.LabelFor(m => m.UserName)
                                @Html.TextBoxFor(m => m.UserName, new { @class = "form-control input-lg", type = "text" })
                                @Html.ValidationMessageFor(m => m.UserName)
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(m => m.Password)
                                @Html.PasswordFor(m => m.Password, new { @class = "form-control input-lg", type = "password" })
                                @Html.ValidationMessageFor(m => m.Password)
                            </div>
                            <span class="button-checkbox">
                                @Html.CheckBoxFor(m => m.RememberMe)Запомнить меня
                                <a href="#" class="btn btn-link pull-right">Забыли Пароль?</a>
                            </span><hr class="colorgraph">

                            <div class="row">
                                <div class="col-xs-6 col-sm-6 col-md-6">
                                    <input class="btn btn-lg btn-success btn-block" type="submit" value="Выполнить вход" />
                                </div>
                                <div class="col-xs-6 col-sm-6 col-md-6">
                                    <a class="btn btn-lg btn-primary btn-block" href="@Url.Action("Register", "Account")"> Регистрация</a>
                                </div>
                            </div>
                          
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
    }
</section>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
