@Styles.Render("~/Content/carousel.css")
@model BillBoard.Models.Advert

<div class="col-md-3">
    <a href="@Url.Action("Details", "Advert", new { id = Model.AdvertID })" class="thumbnail" style="text-decoration : none">
        <div>
            @if (Model.ImageData == null)
            {
                <img width="233" height="253" src="~/Content/Images/no_image.jpg">
            }
            else
            {
                <img width="230" height="250" src="@Url.Action("GetImage", "Advert", new { Model.AdvertID })" alt="Image" style="max-width:250px">
            }
        </div>
        <div class="caption">
            <h4 class="text-center">@Model.Title</h4>
            <h3 class="text-center text-primary">@Model.Price.ToString("c")</h3>
            <p class="text-center">
        </div>
    </a>
</div>